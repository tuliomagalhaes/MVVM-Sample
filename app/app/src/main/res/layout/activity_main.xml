<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCreditCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rvCreditCard"
        app:layout_constraintTop_toTopOf="@+id/rvCreditCard"
        app:layout_constraintEnd_toEndOf="@+id/rvCreditCard"
        app:layout_constraintStart_toStartOf="@+id/rvCreditCard"
        android:visibility="gone"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
